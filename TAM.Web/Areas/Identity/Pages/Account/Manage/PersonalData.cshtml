@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<div class="row">
    <div class="col-md-6">
        <p>Vaš račun sadrži lične podatke. Te podatke možete preuzeti ili obrisati ukoliko želite.</p>
        <p>
            <strong>Brisanje podataka će prouzrokovati brisanje vašeg računa!</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group"
              style="display: inline">
            <button class="btn btn-primary" type="submit">Preuzmi</button>

        </form>
        <p style="display: inline">
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">Obrisi</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}