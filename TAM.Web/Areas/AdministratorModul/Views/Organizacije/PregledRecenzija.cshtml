
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model OrganizacijePregledRecenzijaVM

<div class="mt-3"></div>

@if (Model.PostojeRecenzije)
{
    <h5>Procjecna ocjena kursa: @Model.ProsjecnaOcjenaKursa</h5>
    <h5>Prosjecna ocjena predavaca: @Model.ProsjecnaOcjenaPredavaca</h5>
    <table class="table table-hover mt-3">
        <thead class="card-header">
            <tr>
                <td>Komentari</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Komentari)
            {
                <tr>
                    <td>@item</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h5>Još uvijek nema recenzija za ovu organizaciju kursa</h5>
}