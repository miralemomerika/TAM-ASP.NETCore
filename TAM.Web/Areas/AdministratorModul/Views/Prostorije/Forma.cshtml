@using TAM.Core

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Prostorija

<form asp-action="Spasi" asp-controller="Prostorije">
    <div class="modal-header" style="padding:1rem 0rem">
        @if (Model.Id == 0)
        {
            <h5 class="modal-title" id="exampleModalLongTitle">Dodaj</h5>
        }
        else
        {
            <h5 class="modal-title" id="exampleModalLongTitle">Uredi</h5>
        }
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <br />
    <input asp-for="Id" value="@Model.Id" hidden />

    <div class="form-group">
        <label for="Naziv">Naziv:</label>
        <input asp-for="Naziv" value="@Model.Naziv" type="text" class="form-control mb-3" />
        <span asp-validation-for="Naziv" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Naziv">Broj mjesta:</label>
        <input asp-for="BrojMjesta" value="@Model.BrojMjesta" type="number" class="form-control mb-3" />
        <span asp-validation-for="BrojMjesta" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary float-right mb-3 mt-3" value="Spremi" />
</form>
