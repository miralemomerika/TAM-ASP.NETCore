
@using TAM.Core

@{
    var Naslov = ViewData["Title"].ToString();
    var Controller = ViewData["Controller"].ToString();
    var Akcija = ViewData["Action"].ToString();
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model cloudscribe.Pagination.Models.PagedResult<Prostorija>

<br />
<br />
<br />
<form asp-action="@Naslov" method="get">    
    <div>
        <input type="text" name="pretrazivanje" value="@ViewBag.CurrentFilter" placeholder="Pretrazi" />       
        <button type="submit" value="Search"><i class="fa fa-search"></i></button>
    </div>
</form>
<br />
<table class="table table-striped">
    <thead class="card-header">
        <tr align="center">
            <th>Prostorija</th>
            <th>Kapacitet</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr align="center">
                <td>@item.Naziv</td>
                <td>@item.BrojMjesta</td>
                <td>
                    <button class="btn btn-info" onclick="Uredi(@item.Id)"
                            data-toggle="modal" data-target="#exampleModalCenter">
                        Uredi
                    </button>
                    <button class="btn btn-danger"
                            onclick="location.href='/AdministratorModul/Prostorije/Obrisi?Id=@item.Id'">
                        Obrisi
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-dark float-right"
        data-toggle="modal" data-target="#exampleModalCenter" onclick="Dodaj()">
    Dodaj
</button>


<ul>
    <partial name="_PaginationPartial" view-data="ViewData" model="Model" />
</ul>
@Html.Partial("_ModalPartial")

<script>
    function Uredi(Id, url) {
        $.get("/AdministratorModul/Prostorije/Uredi?Id=" + Id, function (res) {
            $("#forma").html(res);
        })
    }

    function Dodaj() {
        $.get("/AdministratorModul/Prostorije/Dodaj", function (res) {
            $("#forma").html(res);
        })
    }
</script>