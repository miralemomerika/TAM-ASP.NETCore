@using Microsoft.AspNetCore.Identity
@using TAM.Core
@using TAM.ViewModels
@{
    var Action = TempData["action"].ToString();
    var NazivTeksta = TempData["nazivTeksta"].ToString();
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model UplataPrikazVM

<form asp-action="@Action" asp-controller="Uplata">
    <div class="modal-header" style="padding:1rem 0rem">
        <h5 class="modal-title" id="exampleModalLongTitle">Obrisi</h5>
    </div>
    <br />
    <input asp-for="Id" value="@Model.Id" hidden />
    <div class="form-group">
        <label for="Iznos">Iznos:</label>
        <input asp-for="Iznos" value="@Model.Iznos" type="text" class="form-control mb-3" disabled />
    </div>
    <div class="form-group">
        <label for="Datum">Datum:</label>
        <br />
        <input asp-for="Datum" type="text" value="@Model.Datum.ToString("dd.MM.yyyy")" class="form-control mb-3" disabled />
    </div>
    @if (Model.PrijavaId != null)
    {
        <div class="form-group">
            <label for="NazivKursa">Naziv kursa:</label>
            <br />
            <input asp-for="NazivKursa" type="text" value="@Model.NazivKursa" class="form-control mb-3" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Polaznik">Polaznik:</label>
            <br />
            <input asp-for="Polaznik" type="text" value="@Model.Polaznik" class="form-control mb-3" disabled />
        </div>
    }
    else
    {
        <div class="form-group">
            <label asp-for="NazivDogadjaja">Naziv dogadjaja:</label>
            <br />
            <input asp-for="NazivDogadjaja" type="text" value="@Model.NazivDogadjaja" class="form-control mb-3" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Organizator">Organizator:</label>
            <br />
            <input asp-for="Organizator" type="text" value="@Model.Organizator" class="form-control mb-3" disabled />
        </div>
    }

    <input type="submit" class="btn btn-danger float-right" value="Obrisi" />
</form>